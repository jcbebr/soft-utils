{
  "name": "Soft Utils",
  "description": "Utility functions for Soft developers",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "/app/background.js"
  },
  "permissions": ["tabs", "storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "/app/popup/popup.html",
    "default_icon": {
      "16": "/app/images/16.png",
      "32": "/app/images/32.png",
      "48": "/app/images/48.png",
      "64": "/app/images/64.png",
      "128": "/app/images/128.png"
    }
  },
  "icons": {
    "16": "/app/images/16.png",
    "32": "/app/images/32.png",
    "48": "/app/images/48.png",
    "64": "/app/images/64.png",
    "128": "/app/images/128.png"
  },
  "options_page": "/app/options/options.html"
}
